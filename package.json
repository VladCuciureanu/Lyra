{
  "name": "@vladinski/lyra",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "private": true,
  "author": {
    "name": "Vlad Cuciureanu",
    "email": "dev@vladinski.md",
    "url": "https://vladinski.md"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "prettify": {},
      "typecheck": {},
      "lint": {},
      "dev": {
        "cache": false
      }
    }
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "start:api": "node apps/api/dist",
    "build:api": "cd apps/api && yarn build",
    "start:web": "node apps/web/dist",
    "build:web": "cd apps/web && yarn build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettify": "turbo run prettify",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "babel-eslint": "10.1.0",
    "eslint": "8.9.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "lint-staged": "12.3.4",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "turbo": "1.1.2",
    "typescript": "4.5.5"
  },
  "resolutions": {
    "prettier": "2.5.1"
  }
}

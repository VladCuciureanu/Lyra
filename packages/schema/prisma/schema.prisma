// Models

model User {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  email     String     @unique
  name      String?
  password  String
  role      UserRole   @default(USER)
  status    UserStatus @default(INVITED)
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

enum UserStatus {
  INVITED
  ACTIVE
  INACTIVE
}

// Boilerplate

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider              = "zod-prisma"
  output                = "../lib/zod"
  relationModel         = true
  modelCase             = "PascalCase"
  modelSuffix           = "Schema"
  useDecimalJs          = true
  prismaJsonNullability = true
  // imports                  = null
}

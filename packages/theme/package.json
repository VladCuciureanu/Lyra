{
  "name": "@vladinski/lyra-theme",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "private": true,
  "author": {
    "name": "Vlad Cuciureanu",
    "email": "dev@vladinski.md",
    "url": "https://vladinski.md"
  },
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "lint": "eslint --cache --ext .ts,.tsx,.js ./src",
    "lint:fix": "eslint --fix --config .eslintrc.commit.js --cache --ext .ts,.tsx,.js ./src",
    "prettify": "prettier --write ./src --ignore-path ../../.prettierignore",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.(js|jsx|json|ts|tsx|html)": [
      "prettier --write --ignore-path ../../.prettierignore"
    ],
    "*.(ts|tsx)": [
      "eslint --fix --config .eslintrc.commit.js"
    ]
  }
}
